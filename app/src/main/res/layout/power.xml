<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.twistedx.superstore.iPhone6s"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <!--category of product-->
            <!--change the text-->
            <TextView
                android:textSize="25sp"
                android:id="@+id/category"
                android:text="Power Supply"
                android:textColor="@android:color/black"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp" />

            <!--product name-->
            <!--change the text-->
            <TextView
                android:textSize="20sp"
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVGA 1000 GQ Power Supply"
                android:textColor="@android:color/black"

                android:layout_below="@id/category"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp" />

            <!--image-->
            <!--you need to change the image and its dimensions to fit your image-->
            <ImageView
                android:id="@+id/image"
                android:layout_width="382dp"
                android:layout_height="280dp"
                android:background="@drawable/power"

                android:layout_below="@id/productName"
                android:layout_marginTop="10dp"/>

            <!--price-->
            <!--change the text-->
            <TextView
                android:id="@+id/price"
                android:text="Price: $99.99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"

                android:layout_below="@id/image"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>

            <!--description-->
            <!--change the text-->
            <TextView
                android:text="The EVGA SuperNOVA 1600 P2 is the latest addition to the award-winning EVGA Power Supply line up. Bringing with it a fully modular interface, Japanese capacitors, high quality near silent dual ball bearing fan, and 1600 Watts of continuous power. It also features a single, powerful +12 volt rail to maximize stability and compatibility. The EVGA SuperNOVA 1600 P2 also has NVIDIA SLI and 80 Plus Platinum Rating certification. The ECO Thermal Control Fan System offers Fan RPM modes to provide zero fan noise during low load operations. You can also feel secure knowing that EVGA power supplies have a host of power protections to keep your hardware safe!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"

                android:layout_below="@id/price"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>

        </RelativeLayout>


    </ScrollView>
</LinearLayout>