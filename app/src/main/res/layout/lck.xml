<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.twistedx.superstore.iPhone6s"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <!--category of product-->
        <!--change the text-->
        <TextView
            android:textSize="25sp"
            android:id="@+id/category"
            android:text="Cooling"
            android:textColor="@android:color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" />

        <!--product name-->
        <!--change the text-->
        <TextView
            android:textSize="20sp"
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corsair Hydro Series H110i GT High Performance Water / Liquid CPU Cooler"
            android:textColor="@android:color/black"

            android:layout_below="@id/category"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp" />

        <!--image-->
        <!--you need to change the image and its dimensions to fit your image-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="382dp"
            android:layout_height="280dp"
            android:background="@drawable/lck"

            android:layout_below="@id/productName"
            android:layout_marginTop="10dp"/>

        <!--price-->
        <!--change the text-->
        <TextView
            android:id="@+id/price"
            android:text="$179.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"

            android:layout_below="@id/image"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>

        <!--description-->
        <!--change the text-->
        <TextView
            android:text="The Hydro Series H110i GT is an extreme performance, all-in-one liquid CPU cooler for cases with 280mm radiator mounts. The 280mm radiator and dual SP140L PWM fans provide the excellent heat dissipation you need for highly overclocked CPUs. Itâ€™s Corsair Link compatible, so you can customize cooling performance, monitor system temperature, and change the color of the RGB LED lighting."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"

            android:layout_below="@id/price"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"/>

    </RelativeLayout>


</ScrollView>
    </LinearLayout>